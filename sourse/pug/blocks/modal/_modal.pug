					+form-wrap
						+e.row.row
							.col-12
								+e.title.form-data Заказать презентацию
							.col-12
								+input("Введите свое имя", 'text', 'Имя')(required)
									span.required *
							.col-12
								+input("+7(ХХХ)-ХХХ-ХХ-ХХ", 'tel', 'Телефон')(required)
									span.required *
							.col-12
								+input("Введите свой E-mail", 'email', 'E-mail')(required)
									span.required *
							.col-12
								+e.BUTTON.btn.btn.btn-primary(type="submit") Заказать
							.col-12
								+policy2()
	// #modal-order-presentation

	div(id="modal-call2"  style="display: none" )
		+b.modal-win
			+e.row.row
				.col-md-6.d-none.d-md-block

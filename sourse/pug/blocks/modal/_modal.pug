
mixin modal() 
	//  start modals
	//- a(href="modal-call").link-modal-js modal-call 
	div(id="modal-call"  style="display: none" )
		+b.modal-win
			+e.row.row
				.col-md-6.d-none.d-md-block
					+e.img-bg.bg-wrap
						+img('img/modal-bg-1.jpg', 'bg').picture-bg
				.col-md-6
					+form-wrap
						+e.row.row
							.col-12
								+e.title.form-data Оставить заявку
							.col-12
								+input("Введите свое имя", 'text', 'Имя')(required)
									span.required *
							.col-12
								+input("Введите название компании", 'text', 'Название компании')
							.col-12
								+input("+7(ХХХ)-ХХХ-ХХ-ХХ", 'tel', 'Телефон')(required)
									span.required *
							.col-12
								+input("Введите свой E-mail", 'email', 'E-mail')(required)
									span.required *
							.col-12
								+input("Введите сообщение", 'textarea', 'Сообщение')
							.col-12
								+e.BUTTON.btn.btn.btn-primary(type="submit") Отправить
							.col-12
								+policy2()
	// #modal-call

	div(id="modal-order-presentation"  style="display: none" )
		+b.modal-win
			+e.row.row
				.col-md-6.d-none.d-md-block
